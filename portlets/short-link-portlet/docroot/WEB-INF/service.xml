<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="com.liferay.shortlink">
	<namespace>ShortLink</namespace>
	<entity name="ShortLinkEntry" uuid="true" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="shortLinkEntryId" type="long" primary="true" />

		<!-- Audit fields -->

		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="originalURL" type="String" />
		<column name="shortURL" type="String" />
		<column name="autogenerated" type="boolean" />
		<column name="active" type="boolean" />

		<!-- Finder methods -->

		<finder name="LtModifiedDate" return-type="Collection">
			<finder-column name="modifiedDate" comparator="&lt;" />
		</finder>
		<finder name="ShortURL" return-type="ShortLinkEntry">
			<finder-column name="shortURL" />
		</finder>
		<finder name="Autogenerated" return-type="Collection">
			<finder-column name="autogenerated" />
		</finder>
		<finder name="OURL_A" return-type="Collection">
			<finder-column name="originalURL" />
			<finder-column name="autogenerated" />
		</finder>
		<finder name="SURL_A" return-type="ShortLinkEntry">
			<finder-column name="shortURL" />
			<finder-column name="autogenerated" />
		</finder>
	</entity>
	<exceptions>
		<exception>DuplicateShortLinkEntry</exception>
		<exception>ShortLinkEntryOriginalURL</exception>
		<exception>ShortLinkEntryShortURL</exception>
	</exceptions>
</service-builder>