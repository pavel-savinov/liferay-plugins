<?xml version="1.0"?>
<!DOCTYPE hook PUBLIC "-//Liferay//DTD Hook 6.2.0//EN" "http://www.liferay.com/dtd/liferay-hook_6_2_0.dtd">

<hook>
	<servlet-filter>
		<servlet-filter-name>Autogenerated Short Link Filter</servlet-filter-name>
		<servlet-filter-impl>com.liferay.shortlink.hook.filter.AutogeneratedShortLinkFilter</servlet-filter-impl>
	</servlet-filter>
	<servlet-filter>
		<servlet-filter-name>Rewrite Short Link Filter</servlet-filter-name>
		<servlet-filter-impl>com.liferay.shortlink.hook.filter.RewriteShortLinkFilter</servlet-filter-impl>
	</servlet-filter>
	<servlet-filter-mapping>
		<servlet-filter-name>Autogenerated Short Link Filter</servlet-filter-name>
		<before-filter>Valid Host Name Filter</before-filter>
		<url-pattern>/a/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</servlet-filter-mapping>
	<servlet-filter-mapping>
		<servlet-filter-name>Rewrite Short Link Filter</servlet-filter-name>
		<before-filter>Valid Host Name Filter</before-filter>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</servlet-filter-mapping>
</hook>